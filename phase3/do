#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset
set -x

cd "${BASH_SOURCE%/*}"

CONFIG_FILE="${CONFIG_JSON_FILE:-../.config.json}"
CLUSTER_NAME=$(jq -r '.phase1.cluster_name' ${CONFIG_FILE})
CLUSTER_DIR=clusters/${CLUSTER_NAME}
TMP_DIR=${CLUSTER_DIR}/.tmp

gen() {
	mkdir -p ${TMP_DIR}
	jsonnet --multi ${TMP_DIR} --tla-code-file cfg=${CONFIG_FILE} all.jsonnet
}

deploy() {
	gen
	mkdir -p /tmp/kubectl/
	export KUBECTL_VERSION=$(curl https://storage.googleapis.com/kubernetes-release/release/latest.txt)
	wget https://storage.googleapis.com/kubernetes-release/release/${KUBECTL_VERSION}/bin/linux/amd64/kubectl -O /tmp/kubectl/kubectl
	chmod +x /tmp/kubectl/kubectl
	HOME=/tmp/kubectl /tmp/kubectl/kubectl apply -f ${TMP_DIR}
}


case "${1:-}" in
  "")
    ;;
  "deploy")
    deploy
    ;;
  "gen")
    gen
    ;;
esac
